<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Category</title>
</head>
<body>
  <h1><%= category.category_name %>:</h1>
  <ul>
    <% items.forEach((item) => { %>
      <li>
        Item: <%= item.item_name %>
        Qty: <%= item.item_qty %>
        <a href="/item/<%= item.id %>"><button>Edit Quantity</button></a>
        <a href="/item/<%= item.id %>/delete"
          onclick="return confirm('are you sure you want to delete?')")>
          <button>Delete</button>
        </a>
      </li>
    <% }); %>
  </ul>
  <a href="/item/new?category_id=<%= category.id %>"><button>New Item</button></a>
  <br>
  <a href="/">Home</a>
</body>
</html>